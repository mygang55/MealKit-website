
<section id="login">
    
    <div class="login-container">     
           
        <form class="form-singin" action="/login" method="POST"> 
            <div class="login-logo">
                <img class="mb-4" src="/img/logo.svg" alt="" width="72" height="57">
                <h1 class="h3 mb-3 fw-normal">Meal Kits</h1>
            </div>
            <div class="login-text">
                 <p class="custLogin">Please Signin</p>  
            </div>
           <div class="form-input">
               
                <label for="email" class="getinfo" >Email Address</label>
                <input type="email" id="email-login" name="email" placeholder="name@example.com" autofocus required>


                <label for="pwd" class="getinfo" >Password</label>
                <input type="password" name="password" placeholder="Password" required>  

            </div>
            <div class="login-submit">                
                <input type="submit" value="Sign In"  class="signin-btn">                
            </div>
            <div class="ask-signUp">                
                <p>don't have account yet? Join now! <a href="/customerRegistration">Sing Up</a></p>               
            </div>
               
               
            <br><br>
            {{#each errorMessages}}
                <div class="errors">{{this}}</div><br>
            {{/each}}

        </form>
    </div>    
</section>

