<section id="regist">
    <p class="CreateAccount">Create Account</p>
    
    <div class="regist-container">
        <p class="text1">Join Us and <br>
        Enjoy your heathly meals!<br><br></p>
        
        <form action="/customerRegistration" method="POST">  

            <label for="name" class="getinfo">First Name</label><br><br>
            <input type ="text"  name="fname"><br><br>            
            
            <label for="name" class="getinfo">Last Name</label><br><br>
            <input type ="text" name="lname"><br><br>
        
            <label for="email" class="getinfo">Email</label><br><br>
            <input type="email" id="email" name="email"><br><br>

            <label for="pwd" class="getinfo">Password</label><br><br>
            <input type="password" name="password"><br><br><br><br>
            <input type="submit" value="Sign Up" class="submitButton">

            <br><br>
            {{#each errorMessages}}
                <div class="errors">{{this}}</div><br>
            {{/each}}

        </form>
    </div>
       
</section>